@model Usuario
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />        
        <div class="form-group">
            <label asp-for="NomeUsuarioCadastro">Nome</label>
            <input asp-for="NomeUsuarioCadastro" class="form-control"/>                                   
        </div>
        <div class="form-group">
            <label asp-for="CpfUsuario">CPF</label>
            <input asp-for="CpfUsuario" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="LoginUsuario">Login</label>
            <input asp-for="LoginUsuario" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="SenhaUsuario">Senha</label>
            <input asp-for="SenhaUsuario" class="form-control"/>
        </div>
        
        <input type="submit" value="Salvar" class="btn btn-primary"/>
        <p class="text-danger">@ViewData["Mensagem"]</p>
    </form>
</div>