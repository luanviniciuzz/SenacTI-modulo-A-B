@model usuarioRepository
@{
    ViewData["Title"] = "Cadastro de Usuário";
}
<h2>Cadastro de Usuário</h2>
<p id="pMensagem">@ViewBag.Mensagem</p>
<form asp-action="Cadastro" method="POST">
    <p>
        <label asp-for="nomeUsuario">Nome:</label>
        <input asp-for="nomeUsuario" />
    </p>
    <p>
        <label asp-for="dtNascimento">Data de Nascimento(ano/mês/dia):</label>
        <input asp-for="dtNascimento" />
    </p>
    <p>
        <label asp-for="login">Login:</label>
        <input asp-for="login" />
    </p>
    <p>
        <label asp-for="senha">Senha:</label>
        <input asp-for="senha" />
    </p>
    <p>
        <input type="submit" value="Cadastrar" />
    </p>
</form>